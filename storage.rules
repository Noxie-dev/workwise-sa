rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Users can only upload and manage files in their own folder.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // All users can read from the public folder, but nobody can write to it directly.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Writes should be handled by the admin SDK
    }

    // All users can read job-related files, but only admins can upload them.
    match /jobs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}