# WARNING: This is an example environment file.
# DO NOT add real API keys or secrets to this file.
# Create a copy named .env and add your actual values there.
#
# This file should be committed to version control.
# The actual .env files should NEVER be committed.

# WorkWiseSA Environment Configuration

# Database Configuration
# PostgreSQL configuration - using SQLite for testing
DATABASE_URL=sqlite://./test.db
# File storage configuration
UPLOAD_DIR=uploads
FILE_SERVE_URL=http://localhost:5000/uploads

# Application Settings
NODE_ENV=development
PORT=5000

# Security
SESSION_SECRET=your_session_secret_here

# AI Integration Keys
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# Firebase Configuration
FIREBASE_PROJECT_ID=workwise-sa-project
FIREBASE_AUTH_DOMAIN=workwise-sa-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=workwise-sa-project.appspot.com
# You'll need to get these values from the Firebase console
# FIREBASE_API_KEY=your_firebase_api_key_here
# FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
# FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Admin SDK Configuration
GOOGLE_APPLICATION_CREDENTIALS=./workwise-sa-project-firebase-adminsdk.json

# For client-side environment variables (Vite)
VITE_FIREBASE_PROJECT_ID=workwise-sa-project
VITE_FIREBASE_AUTH_DOMAIN=workwise-sa-project.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=workwise-sa-project.appspot.com
# VITE_FIREBASE_API_KEY=your_firebase_api_key_here
# VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
# VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Emulator Configuration
VITE_USE_FIREBASE_EMULATORS=true

# Gemini API Key
GOOGLE_GEMINI_API_KEY=

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_IMAGES_API_TOKEN=your-cloudflare-images-api-token
CLOUDFLARE_IMAGES_HASH=your-images-delivery-hash
CLOUDFLARE_WEBHOOK_SECRET=your-webhook-secret-key

# Optional: Cloudflare R2 (if you want to use R2 as backup storage)
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=user-media

# // Import the functions you need from the SDKs you need
