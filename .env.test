# Test Environment Configuration

# Database Configuration - Use in-memory SQLite for tests
DATABASE_URL=sqlite::memory:

# File storage configuration
UPLOAD_DIR=uploads-test
FILE_SERVE_URL=http://localhost:5001/uploads-test

# Application Settings
NODE_ENV=test
PORT=5002

# Security
SESSION_SECRET=test_session_secret

# Firebase Configuration - Use emulators for testing
FIREBASE_PROJECT_ID=test-project
FIREBASE_AUTH_DOMAIN=test-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=test-project.appspot.com
FIREBASE_API_KEY=test-api-key
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Use Firebase Emulators
USE_FIREBASE_EMULATORS=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080

# Disable real API calls in tests
DISABLE_EXTERNAL_API_CALLS=true